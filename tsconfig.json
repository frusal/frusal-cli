{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "target": "ES2015",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2015"
      ],
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*"
    ],
  }
